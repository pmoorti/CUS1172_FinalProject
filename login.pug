doctype html 
html 
    head 
        title Sign In 
        block css 
            link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
            link(rel='stylesheet', href='/resources/styling3.css')
        block script 
    body
        div.container 
            h1 Sign In 
            if message
                p.message.message-class= message 
            form(role='form', method='POST', action=action_url)
                div.form-group 
                    label(for='username') Enter Username: 
                    input#username.form-control(type='text', placeholder='Enter username here', name='username')
                div.form-group 
                    label(for='password') Enter Password: 
                    input#password.form-control(type='password', placeholder='Enter password here', name='password')  
                button.btn(type='submit', class='button', name='existingUser') Sign In 
